/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;

    PARTS:
Not(in=a, out=nota);
And(a=sel, b=nota, out=c);
Not(in=sel, out=notsel);
Not(in=b; out=notb);
And(a=notsel, b=notb, out=d);
Or(a=c, b=d, out=out);
}
